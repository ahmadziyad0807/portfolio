{
  "security": {
    "version": "1.0.0",
    "lastUpdated": "2026-01-08",
    "policies": {
      "contentSecurityPolicy": {
        "defaultSrc": ["'self'"],
        "scriptSrc": ["'self'", "'unsafe-inline'", "'unsafe-eval'"],
        "styleSrc": ["'self'", "'unsafe-inline'"],
        "imgSrc": ["'self'", "data:", "https:"],
        "fontSrc": ["'self'", "data:"],
        "connectSrc": ["'self'", "https:"],
        "frameAncestors": ["'none'"],
        "baseUri": ["'self'"],
        "formAction": ["'self'"]
      },
      "rateLimiting": {
        "enabled": true,
        "windowMs": 900000,
        "maxRequests": 100,
        "skipSuccessfulRequests": false
      },
      "inputValidation": {
        "maxInputLength": 1000,
        "allowedFileTypes": [".jpg", ".jpeg", ".png", ".gif", ".pdf"],
        "maxFileSize": 5242880,
        "sanitizeHtml": true
      }
    },
    "monitoring": {
      "logSecurityEvents": true,
      "alertOnSuspiciousActivity": true,
      "maxStoredEvents": 100,
      "reportingEndpoint": "/api/security/report"
    },
    "dependencies": {
      "auditLevel": "moderate",
      "autoUpdate": false,
      "allowedLicenses": ["MIT", "Apache-2.0", "BSD-3-Clause", "ISC"],
      "blockedPackages": []
    },
    "deployment": {
      "requireHttps": true,
      "enableHSTS": true,
      "hstsMaxAge": 31536000,
      "includeSubdomains": true,
      "preload": true
    },
    "authentication": {
      "requireMFA": false,
      "sessionTimeout": 3600,
      "maxLoginAttempts": 5,
      "lockoutDuration": 900
    }
  },
  "compliance": {
    "gdpr": {
      "enabled": true,
      "cookieConsent": true,
      "dataRetention": 365,
      "rightToErasure": true
    },
    "accessibility": {
      "wcagLevel": "AA",
      "screenReaderSupport": true,
      "keyboardNavigation": true
    }
  },
  "emergency": {
    "contacts": [
      {
        "role": "Security Lead",
        "email": "ahmadziyad0807@gmail.com",
        "phone": "+1-XXX-XXX-XXXX"
      }
    ],
    "procedures": {
      "incidentResponse": "CYBERSECURITY_PREVENTION.md#incident-response-plan",
      "emergencyShutdown": "scripts/emergency-shutdown.sh",
      "backupRecovery": "scripts/backup-recovery.sh"
    }
  }
}