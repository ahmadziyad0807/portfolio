{
  "name": "ahmad-ziyad-portfolio",
  "version": "1.0.0",
  "description": "Ahmad Ziyad - Professional Portfolio with AI-themed design and interactive features",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:frontend",
    "build:all": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "build:backend": "npm run build --workspace=packages/backend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "test": "npm run test --workspace=packages/frontend",
    "test:all": "npm run test --workspaces",
    "test:frontend": "npm run test --workspace=packages/frontend",
    "test:backend": "npm run test --workspace=packages/backend",
    "test:unit": "npm run test:unit --workspaces",
    "test:pbt": "npm run test:pbt --workspaces",
    "lint": "npm run lint --workspace=packages/frontend",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "setup": "npm run docker:up && npm run setup:ollama",
    "setup:ollama": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'scripts\\\\setup-ollama.bat' : 'bash scripts/setup-ollama.sh', {stdio: 'inherit'})\"",
    "deploy": "npm run build:frontend && vercel --prod",
    "deploy:preview": "npm run build:frontend && vercel",
    "security:audit": "npm audit && npm run security:scan",
    "security:scan": "npx eslint . --config .eslintrc.security.js --ext .js,.jsx,.ts,.tsx",
    "security:fix": "npm audit fix",
    "security:setup": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'scripts\\\\setup-security.bat' : 'bash scripts/setup-security.sh', {stdio: 'inherit'})\"",
    "security:emergency": "bash scripts/emergency-security.sh",
    "security:test": "npm run test --workspace=packages/frontend -- --testPathPattern=security",
    "security:test-full": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'scripts\\\\run-security-tests.bat' : 'bash scripts/run-security-tests.sh', {stdio: 'inherit'})\"",
    "security:attack-scenarios": "npm run test --workspace=packages/frontend -- --testPathPattern=security-attack-scenarios",
    "security:penetration-test": "npm run test --workspace=packages/frontend -- --testPathPattern=penetration-testing"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "audit-ci": "^7.1.0",
    "concurrently": "^8.2.2",
    "eslint-plugin-security": "^3.0.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
